{
    "manifest_version": 3,
    "name": "Categora",
    "version": "1.0",

    "description": "Save URL's to have them tagged with keywords, making them easier to search for at a later time!",

    "background": {
        "service_worker": "background.js",
        "type": "module" 
    },

    "action": {
        "default_icon": {
            "48": "icons/logo48.png"
        },
        "default_title": "Open Categora",
        "default_popup": "popup.html"
    },

    "permissions": [
        "activeTab",
        "storage"
    ]
}
